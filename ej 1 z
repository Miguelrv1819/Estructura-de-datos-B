#include <iostream>
#include <string>
using namespace std;

class Pokemon {
private:
    string nombre;
    string tipo;
    int nivel;

public:
    Pokemon(string _nombre, string _tipo) {
        nombre = _nombre;
        tipo = _tipo;
        nivel = 1;
    }

    void subirNivel() {
        nivel++;
        cout << nombre << " ha subido de nivel! Ahora es nivel " << nivel << endl;
    }

    void atacar(Pokemon& enemigo) {
        cout << nombre << " ha atacado a " << enemigo.nombre << "!" << endl;
    }
};

int main() {
    Pokemon pikachu("Pikachu", "ElÃ©ctrico");
    Pokemon charmander("Charmander", "Fuego");

    pikachu.subirNivel();
    pikachu.subirNivel();

    pikachu.atacar(charmander);

    return 0;
}
